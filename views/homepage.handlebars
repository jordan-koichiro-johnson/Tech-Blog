<body>
    {{>navbar}}
    {{#each post}}
    <div class="blog-post">
        <div class="blog-header">

            <h3 class="blog-title">{{title}}</h3>

            <h5 class="blog-user">{{username}}, {{createdAt}}</h5>
        </div>

        <div class="blog-content">
            <div>

                {{content}}
            </div>
            <button id='comment{{id}}' type="button" onclick="commentPost(event)">comment</button>
        </div>

    </div>
    {{/each}}
</body>